<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorPrimary">@color/light_gray</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Theme.ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
